CXX = c++  # Especifica el compilador que deseas utilizar
CXXFLAGS = -std=c++98 -Wall -Wextra -Werror  # Especifica las opciones de compilaci√≥n

# Especifica el nombre del archivo ejecutable
TARGET = btc

# Especifica los archivos que deseas compilar
SRCS = main.cpp
OBJS = $(SRCS:.cpp=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(TARGET)

clean:
	rm -f $(OBJS) $(TARGET)